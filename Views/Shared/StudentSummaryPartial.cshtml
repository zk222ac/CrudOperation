
@{ 
    var imagePath = "/Images/" + @Model.Image;
}

<tr>
    <td>@Model.Id</td>
    <td>@Model.Name</td>
    <td>@Model.Email</td>
    <td>@Model.Profession</td>
    <td><img src="@imagePath"/></td>
    <td>
        <a class="btn btn-primary" asp-action="IndexEdit" asp-route-id="@Model.Id">EDIT</a>
        <a class="btn btn-danger" asp-action="DeleteStudent" asp-route-id="@Model.Id" onclick="return confirm('Are you sure you want to delete this user:@Model.Name')">DELETE</a>
    </td>
</tr>